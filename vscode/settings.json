{
    "editor.fontFamily": "'Jetbrains Mono', GenShinGothic-Monospace-Medium, 'MyricaM M', 'Ricty Discord', monospace",
    "editor.fontSize": 13,
    "editor.rulers": [
        80,
        120,
    ],
    "editor.renderIndentGuides": true,
    // useCtrlKeysをtrueにした上でctrl+dをkeybindings.jsonで上書きすると期待の動作になる
    "vim.useCtrlKeys": true,
    "vim.handleKeys": {
        "<C-f>": false,
        "<C-n>": false,
        "<C-e>": false,
        "<C-a>": false,
        "<C-k>": false
    },
    "vim.whichwrap": "<,>,[,]",
    "[html]": {
        "editor.tabSize": 2
    },
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.tabSize": 2,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "files.insertFinalNewline": true,
    "workbench.colorCustomizations": {
        "gitDecoration.ignoredResourceForeground": "#666",
    },
    "[markdown]": {
        "editor.tabSize": 4,
    },
    "[python]": {
        "editor.tabSize": 4,
    },
    "[csharp]": {
        "editor.tabSize": 4,
    },
    "breadcrumbs.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "vsicons.dontShowNewVersionMessage": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "typescript",
            "autoFix": false
        },
        {
            "language": "typescriptreact",
            "autoFix": false
        },
    ],
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.tree.indent": 16,
    "editor.formatOnSave": true,
    "plantuml.server": "http://localhost:8090",
    "plantuml.render": "PlantUMLServer",
    "plantuml.urlFormat": "svg",
    "workbench.colorTheme": "GitHub Dark",
    "cmake.configureOnOpen": false,
    "shellcheck.customArgs": [
        "-x"
    ],
    "explorer.autoReveal": "focusNoScroll",
    "[yaml]": {
        "editor.defaultFormatter": null,
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
    "[jenkinsfile]": {
        "editor.tabSize": 4,
    },
    "plantuml.commandArgs": [],
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "editor.fontLigatures": true,
}
